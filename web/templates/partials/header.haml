  %div.col
    %ul.nav
      %li.nav-item
        %a.nav-link{href: "/"} Home
      %li.nav-item
        %a.nav-link{href: "/repositories"} Repositories
      %li.nav-item
        %a.nav-link{href: "/surveys"} Surveys
      %li.nav-item
        %a.nav-link{href: "/consumers"} Consumers
