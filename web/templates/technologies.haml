%div.chart
  %h2.chart-caption
    Minting PIDs
  %div#pid-chart
  - chart_data1 = ['Repositories']
  - chart_labels1 = ['Not yet, but planning to','Always','Sometimes','Never',"Don't know"]
  - [1,2,3,4,5].each do |i|
    - chart_labels1 << i
    - chart_data1 << @sr.where(:pid_minting => i).count
  :javascript
    var chart = bb.generate({
      bindto: "#pid-chart",
      data: {
        columns: [
            #{chart_data1}
        ]
      },
      axis: {
        x: {
          type: "category",
          categories: #{chart_labels1}
        }
      }
    });

